@model jQuery_Ajax_CRUD.Models.LessonsModel


@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEditL" asp-route-id="@Model.ID" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
       
           
          
            <div class="form-group">
                <label asp-for="Teacher" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        
                    </div>
                    <input asp-for="Teacher" class="form-control" />
                </div>
                <span asp-validation-for="Teacher" class="text-danger"></span>
            </div>
            <div class="row">
                               <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="A" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                
                            </div>
                             <select asp-for="A">
                    <option value= "Mathematics">Mathematics</option>
                    <option value="Physics">Physics</option>
                    <option value="Chemistry">Chemistry</option>
                    <option value="English">English</option>
                </select>  
                        </div>
                        <span asp-validation-for="Class" class="text-danger"></span>
                    </div>
                </div>
                </div>
            <div class="row">
                               <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Class" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                
                            </div>
                             <select asp-for="Class">
                    <option value= "1">ClassA</option>
                    <option value="2">ClassB</option>
                    <option value="3">ClassC</option>
                </select>  
                        </div>
                        <span asp-validation-for="Class" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ClassStart" class="control-label"></label>
                 <input type="datetime-local" asp-for="ClassStart"   class="form-control" value="@Model.ClassStart" />
                        <span asp-validation-for="ClassStart" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ClassEnd" class="control-label"></label>
                 <input type="datetime-local" asp-for="ClassEnd"   class="form-control" value="@Model.ClassEnd" />
                        <span asp-validation-for="ClassEnd" class="text-danger"></span>
                    </div>
                </div>
                </div>
    

       


                          
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>
