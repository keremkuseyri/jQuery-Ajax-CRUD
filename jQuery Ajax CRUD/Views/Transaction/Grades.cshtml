@model IEnumerable<jQuery_Ajax_CRUD.Models.GradesModel>

<div class="modal fade" tabindex="-1" role="dialog" id="form-modal"draggable="true">
    <div class="vertical-alignment-helper">
    <div class="modal-dialog vertical-align-center" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
        </div>
    </div>
</div>
</div>

<div class="col-md-8 offset-md-2">

    <h1 class="text-center"> <i class="fas fa-user-graduate"></i>Student Grades</h1>


    <table class="table">
        <thead class="thead-light">
            <tr>
                 <th>
                    @Html.DisplayNameFor(model=>model.Number)

                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.Name)

                </th>
                
                <th>
                    @Html.DisplayNameFor(model=>model.A)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Class)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Teacher)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Visa1)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Visa2)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Final)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Note)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)

                </th>
                 <th>
                        Pass/Fail
                    </th>

                <th>
                    <a onclick="showInPopup('@Url.Action("AddOrEditN","Transaction",null,Context.Request.Scheme)','Grades Registry')" class="btn btn-success text-white"><i class="fas fa-plus"></i> New Note</a>
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach  (var item in Model)
            {

                <tr>
                     <td>
                        @Html.DisplayFor(modelItem=>item.Number)
                    </td>
                <td>
                       
                        @Html.DisplayFor(modelItem=>item.Name)

                        
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem=>item.A)
                    </td>
                    <th>
                        
                        @Html.DisplayFor(modelItem=>item.Class)
                </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Teacher)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Visa1)
                    </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.Visa2)
                    </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.Final)
                    </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.Note)
                    </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem => item.Passed)
                    </td>

                    <td>
                      <div>
                      
                            <a onclick="showInPopup('@Url.Action("AddOrEditN","Transaction",new {id=item.Id},Context.Request.Scheme)','Edit Registry')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
                            <form asp-action="DeleteN" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                <input type="hidden" asp-for="@item.Id" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                            

                        </div>
                    </td>

                   
                </tr>
            }
        </tbody>
    </table>
</div>




@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


